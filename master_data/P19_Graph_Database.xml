<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P19" version="1.1">
  <metadata>
    <name>Graph Database</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$G = (nodes, edges, props, traversal)$</tuple-notation>
    <components>
      <component>
        <name>nodes</name>
        <type>Set⟨Node⟩</type>
        <notation>nodes</notation>
        <description>entities</description>
      </component>
      <component>
        <name>edges</name>
        <type>Set⟨Edge⟩</type>
        <notation>edges</notation>
        <description>relationships</description>
      </component>
      <component>
        <name>props</name>
        <type>(Node | Edge) → Map⟨String, Value⟩</type>
        <notation>props</notation>
        <description>properties</description>
      </component>
      <component>
        <name>traversal</name>
        <type>Query → Sequence⟨Path⟩</type>
        <notation>traversal</notation>
        <description>executes graph queries</description>
      </component>
    </components>
  </definition>
  <type-definitions>
    <type-def>
      <name>Node</name>
      <definition format="latex">(id: ID, labels: Set⟨String⟩)</definition>
    </type-def>
    <type-def>
      <name>Edge</name>
      <definition format="latex">(id: ID, from: Node, to: Node, type: String)</definition>
    </type-def>
    <type-def>
      <name>Path</name>
      <definition format="latex">Sequence⟨(Node | Edge)⟩</definition>
    </type-def>
    <type-def>
      <name>Query</name>
      <definition format="latex">pattern matching query (Cypher, SPARQL, etc.)</definition>
    </type-def>
  </type-definitions>
  <properties>
    <property id="P.P19.1">
      <name>Efficient Traversal</name>
      <formal-spec format="latex">traverse(node, depth) in O(k·d) where k = avg degree, d = depth</formal-spec>
    </property>
    <property id="P.P19.2">
      <name>Property Graph Model</name>
      <formal-spec format="latex">Both nodes and edges can have properties</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Match Pattern</name>
      <signature/>
      <formal-definition format="latex">```
   MATCH (a:Person)-[:KNOWS]-&gt;(b:Person) WHERE a.name = "Alice"
   RETURN b</formal-definition>
    </operation>
    <operation>
      <name>Shortest Path</name>
      <signature>shortest_path(node1, node2) → Path | null</signature>
      <formal-definition format="latex">```
   shortest_path(node1, node2) → Path | null</formal-definition>
    </operation>
  </operations>
  <manifestations>
    <manifestation>
      <name>Knowledge graphs</name>
    </manifestation>
    <manifestation>
      <name>Dependency graphs</name>
    </manifestation>
    <manifestation>
      <name>Citation networks</name>
    </manifestation>
    <manifestation>
      <name>Social networks</name>
    </manifestation>
  </manifestations>
</pattern>
