<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P103" version="1.1">
  <metadata>
    <name>Multi-Source Reconciliation</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$R_{multi} = (Sources, Conflicts, Resolution, Display) : \text{Sources} \to \text{Reconciled}_{view}$</tuple-notation>
    <components>
      <component>
        <name>Sources</name>
        <type>Set⟨Source × Claim⟩</type>
        <notation>Sources</notation>
        <description>multiple sources making potentially conflicting claims</description>
      </component>
      <component>
        <name>Conflicts</name>
        <type>Set⟨Claim × Claim × ConflictType⟩</type>
        <notation>Conflicts</notation>
        <description>detected contradictions between sources</description>
      </component>
      <component>
        <name>Resolution</name>
        <type>Conflict → ResolvedClaim</type>
        <notation>Resolution</notation>
        <description>strategy for resolving conflicts</description>
      </component>
      <component>
        <name>Display</name>
        <type>ResolvedClaim → Visualization</type>
        <notation>Display</notation>
        <description>how to present reconciled information</description>
      </component>
    </components>
  </definition>
  <type-definitions>
      <type-def>
        <name>Claim</name>
        <definition>$\text{Claim} = (\text{statement}, \text{timestamp}, \text{confidence})$ (factual assertion)</definition>
      </type-def>
      <type-def>
        <name>ConflictType</name>
        <definition>$\text{ConflictType} = \{\text{contradiction}, \text{uncertainty}, \text{temporal}, \text{partial}\}$</definition>
      </type-def>
      <type-def>
        <name>ResolvedClaim</name>
        <definition>$\text{ResolvedClaim} = (\text{merged\_claim}, \text{consensus\_score}, \text{dissenting\_sources})$</definition>
      </type-def>
    </type-definitions>
  <properties>
    <property id="P.P103.1">
      <name>Conflict Detection Completeness</name>
      <formal-spec format="latex">$\forall c_1, c_2 \in \text{Claims} : \text{contradicts}(c_1, c_2) \implies (c_1, c_2, t) \in Conflicts$ for some $t$</formal-spec>
    </property>
    <property id="P.P103.2">
      <name>Source Authority Weighting</name>
      <formal-spec format="latex">$\text{consensus\_score}(claim) = \sum_{s \in \text{supporting}(claim)} w(s.authority)$ where $\sum w = 1$</formal-spec>
    </property>
    <property id="P.P103.3">
      <name>Transparency of Dissent</name>
      <formal-spec format="latex">$\forall r \in \text{ResolvedClaim} : |r.dissenting\_sources| > 0 \implies \text{visible}(r.dissenting\_sources)$</formal-spec>
    </property>
    <property id="P.P103.4">
      <name>Temporal Consistency</name>
      <formal-spec format="latex">$\forall c_1, c_2 : c_1.timestamp &lt; c_2.timestamp \implies \text{priority}(c_2) > \text{priority}(c_1)$ (recency bias)</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Detect Conflicts</name>
      <signature>detectConflicts: Set⟨Source × Claim⟩ → Set⟨Conflict⟩</signature>
      <formal-definition format="latex">$\text{detectConflicts}(S) = \{(c_1, c_2, t) \mid$
  $(s_1, c_1), (s_2, c_2) \in S \land s_1 \neq s_2 \land$
  $t = \text{classifyConflict}(c_1, c_2)\}$</formal-definition>
    </operation>
    <operation>
      <name>Resolve Conflict</name>
      <signature>resolve: Conflict → ResolvedClaim</signature>
      <formal-definition format="latex">$\text{resolve}(c_1, c_2, t) = r$ where
  $r.merged\_claim = \text{merge}(c_1, c_2, t)$
  $r.consensus\_score = \frac{|\text{supporting}(r)|}{|\text{all\_sources}|}$
  $r.dissenting = \{s \mid s \text{ contradicts } r\}$</formal-definition>
    </operation>
    <operation>
      <name>Visualize Disagreement</name>
      <signature>visualizeDisagreement: ResolvedClaim → Visualization</signature>
      <formal-definition format="latex">$\text{visualizeDisagreement}(r) = \text{view}$ where
  $\text{view}.main = r.merged\_claim$
  $\text{view}.alternatives = \{c \mid c \in r.dissenting\}$
  $\text{view}.consensus\_bar = r.consensus\_score \times 100\%$</formal-definition>
    </operation>
  </operations>
  <dependencies>
    <requires>
      <pattern-ref>P100</pattern-ref>
    </requires>
    <uses>
      <pattern-ref>P102</pattern-ref>
      <pattern-ref>P108</pattern-ref>
    </uses>
  </dependencies>
  <manifestations>
    <manifestation>
      <name>Wikipedia edit conflicts</name>
      <description>merging multiple editor contributions</description>
    </manifestation>
    <manifestation>
      <name>AI-aggregated answers</name>
      <description>combining multiple LLM responses</description>
    </manifestation>
    <manifestation>
      <name>News aggregation with bias detection</name>
      <description>showing consensus and dissenting views</description>
    </manifestation>
    <manifestation>
      <name>Multi-RAG source reconciliation</name>
      <description>resolving conflicting retrieved documents</description>
    </manifestation>
  </manifestations>
</pattern>