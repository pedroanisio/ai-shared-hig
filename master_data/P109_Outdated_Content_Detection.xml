<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P109" version="1.1">
  <metadata>
    <name>Outdated Content Detection</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$D_{outdated} = (Content, Sources, Freshness, Alerts) : \text{Document} \to \text{Outdated}_{flags}$</tuple-notation>
    <components>
      <component>
        <name>Content</name>
        <type>Document</type>
        <notation>Content</notation>
        <description>document content to be checked for staleness</description>
      </component>
      <component>
        <name>Sources</name>
        <type>Set⟨Source × Timestamp⟩</type>
        <notation>Sources</notation>
        <description>external sources with last-checked timestamps</description>
      </component>
      <component>
        <name>Freshness</name>
        <type>ContentSpan → ℝ</type>
        <notation>Freshness</notation>
        <description>freshness score per content segment (higher = fresher)</description>
      </component>
      <component>
        <name>Alerts</name>
        <type>Set⟨Alert⟩</type>
        <notation>Alerts</notation>
        <description>detected outdated content notifications</description>
      </component>
    </components>
  </definition>
  <type-definitions>
      <type-def>
        <name>Alert</name>
        <definition>$\text{Alert} = (\text{span}, \text{reason}, \text{severity}, \text{suggested\_update})$</definition>
      </type-def>
      <type-def>
        <name>Severity</name>
        <definition>$\text{Severity} = \{\text{info}, \text{warning}, \text{critical}\}$</definition>
      </type-def>
      <type-def>
        <name>FreshnessScore</name>
        <definition>$\text{FreshnessScore} = [0, 1] \subset \mathbb{R}$ (0 = stale, 1 = fresh)</definition>
      </type-def>
    </type-definitions>
  <properties>
    <property id="P.P109.1">
      <name>Time-Based Decay</name>
      <formal-spec format="latex">$\forall span : Freshness(span) = e^{-\lambda \cdot \Delta t}$ where $\Delta t = \text{now}() - \text{lastUpdated}(span)$</formal-spec>
    </property>
    <property id="P.P109.2">
      <name>Source-Synchronized Staleness</name>
      <formal-spec format="latex">$\forall s \in Sources : \text{sourceChanged}(s) \implies \exists a \in Alerts : a.\text{reason} = \text{source\_updated}$</formal-spec>
    </property>
    <property id="P.P109.3">
      <name>Severity Threshold</name>
      <formal-spec format="latex">$\forall a \in Alerts : Freshness(a.span) &lt; \theta_{critical} \implies a.severity = \text{critical}$</formal-spec>
    </property>
    <property id="P.P109.4">
      <name>Continuous Monitoring</name>
      <formal-spec format="latex">$\forall t \in \text{Time} : \exists \text{check}(Content, Sources) \text{ at interval } \Delta t_{check}$ (periodic)</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Check Freshness</name>
      <signature>checkFreshness: Document × Set⟨Source⟩ → Set⟨Alert⟩</signature>
      <formal-definition format="latex">$\text{checkFreshness}(doc, S) = \{a \mid$
  $\exists span \in doc : Freshness(span) &lt; \theta \land$
  $a = (\span, \text{explain}(span), \text{severity}(span), \text{update}(span))\}$</formal-definition>
    </operation>
    <operation>
      <name>Update Freshness Score</name>
      <signature>updateFreshness: ContentSpan × Source → ℝ</signature>
      <formal-definition format="latex">$\text{updateFreshness}(span, src) = f'$ where
  $\Delta t = \text{now}() - src.timestamp$
  $f' = e^{-\lambda \cdot \Delta t}$ (exponential decay)</formal-definition>
    </operation>
    <operation>
      <name>Suggest Updates</name>
      <signature>suggestUpdates: Alert → Set⟨Edit⟩</signature>
      <formal-definition format="latex">$\text{suggestUpdates}(a) = \text{LLM}_{\text{updater}}(a.span, \text{latestSources}(a.span))$</formal-definition>
    </operation>
  </operations>
  <dependencies>
    <uses>
      <pattern-ref>P100</pattern-ref>
      <pattern-ref>P106</pattern-ref>
      <pattern-ref>P107</pattern-ref>
      <pattern-ref>P111</pattern-ref>
    </uses>
  </dependencies>
  <manifestations>
    <manifestation>
      <name>Wikipedia outdated tags</name>
      <description>"This article needs to be updated" banners</description>
    </manifestation>
    <manifestation>
      <name>Living documents (Elicit, Bit.ai)</name>
      <description>automatic detection and update of stale content</description>
    </manifestation>
    <manifestation>
      <name>News article freshness indicators</name>
      <description>timestamps and update badges</description>
    </manifestation>
    <manifestation>
      <name>Technical documentation staleness detection</name>
      <description>alerts when API docs don't match code</description>
    </manifestation>
  </manifestations>
</pattern>
