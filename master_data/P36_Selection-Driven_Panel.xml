<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P36" version="1.1">
  <metadata>
    <name>Selection-Driven Panel</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$S = (selection, content, \phi_{36}, observers)$</tuple-notation>
    <components>
      <component>
        <name>selection</name>
        <type>Element | null</type>
        <notation>selection</notation>
        <description>currently selected object</description>
      </component>
      <component>
        <name>content</name>
        <type>Component</type>
        <notation>content</notation>
        <description>displayed content</description>
      </component>
      <component>
        <name>\phi_{36}</name>
        <type>Element → Component</type>
        <notation>\phi_{36}</notation>
        <description>maps selection to content</description>
      </component>
      <component>
        <name>observers</name>
        <type>Set⟨Observer⟩</type>
        <notation>observers</notation>
        <description>watch selection changes</description>
      </component>
    </components>
  </definition>
  <type-definitions>
    <type-def>
      <name>Element</name>
      <definition format="latex">Any selectable entity</definition>
    </type-def>
    <type-def>
      <name>Component</name>
      <definition format="latex">Rendered UI content</definition>
    </type-def>
    <type-def>
      <name>SelectionEvent</name>
      <definition format="latex">(previous: Element | null, current: Element | null)</definition>
    </type-def>
  </type-definitions>
  <properties>
    <property id="P.P36.1">
      <name>Selection-Driven Content</name>
      <formal-spec format="latex">selection changes → content := φ₃₆(selection)
∀s ∈ Element: content = φ₃₆(s) when selection = s</formal-spec>
    </property>
    <property id="P.P36.2">
      <name>Reactive Update</name>
      <formal-spec format="latex">selection := new_selection ⇒ notify_observers(SelectionEvent)
All observers automatically receive update</formal-spec>
    </property>
    <property id="P.P36.3">
      <name>Null Selection State</name>
      <formal-spec format="latex">selection = null ⇒ content = empty_state | default_content
Panel handles empty selection gracefully</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Update Selection</name>
      <signature>update_selection(element: Element | null) → Effect</signature>
      <formal-definition format="latex">```
   update_selection(element: Element | null) → Effect
   = previous := selection
     selection := element
     content := φ₃₆(selection)
     notify_observers((previous, selection))</formal-definition>
    </operation>
    <operation>
      <name>Render Content</name>
      <signature>render() → Component</signature>
      <formal-definition format="latex">```
   render() → Component
   = if selection = null:
       return render_empty_state()
     else:
       return φ₃₆(selection)</formal-definition>
    </operation>
    <operation>
      <name>Subscribe to Selection</name>
      <signature>subscribe(observer: Observer) → Effect</signature>
      <formal-definition format="latex">```
   subscribe(observer: Observer) → Effect
   = observers := observers ∪ {observer}
     observer.update(selection)  // Initial notification</formal-definition>
    </operation>
    <operation>
      <name>Clear Selection</name>
      <signature>clear() → Effect</signature>
      <formal-definition format="latex">```
   clear() → Effect
   = update_selection(null)</formal-definition>
    </operation>
  </operations>
</pattern>
