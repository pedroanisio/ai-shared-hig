<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P34" version="1.1">
  <metadata>
    <name>Strategy Pattern</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$S = (interface, implementations, selector, current)$</tuple-notation>
    <components>
      <component>
        <name>interface</name>
        <type>Interface</type>
        <notation>interface</notation>
        <description>defines algorithm contract</description>
      </component>
      <component>
        <name>implementations</name>
        <type>Map⟨ID, Implementation⟩</type>
        <notation>implementations</notation>
        <description>concrete strategies</description>
      </component>
      <component>
        <name>selector</name>
        <type>Context → ID</type>
        <notation>selector</notation>
        <description>chooses strategy</description>
      </component>
      <component>
        <name>current</name>
        <type>Implementation</type>
        <notation>current</notation>
        <description>active strategy</description>
      </component>
    </components>
  </definition>
  <type-definitions>
    <type-def>
      <name>Interface</name>
      <definition format="latex">Set⟨MethodSignature⟩</definition>
    </type-def>
    <type-def>
      <name>Implementation</name>
      <definition format="latex">(id: ID, methods: Map⟨String, Function⟩)</definition>
    </type-def>
    <type-def>
      <name>Context</name>
      <definition format="latex">Map⟨String, Value⟩  // Decision criteria</definition>
    </type-def>
  </type-definitions>
  <properties>
    <property id="P.P34.1">
      <name>Interface Compatibility</name>
      <formal-spec format="latex">∀impl ∈ implementations: implements(impl, interface)</formal-spec>
    </property>
    <property id="P.P34.2">
      <name>Hot-Swappable</name>
      <formal-spec format="latex">Can change strategy at runtime without recompilation</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Select Strategy</name>
      <signature>select_strategy(context: Context) → Implementation</signature>
      <formal-definition format="latex">```
   select_strategy(context: Context) → Implementation
   = id := selector(context)
     return implementations[id]</formal-definition>
    </operation>
    <operation>
      <name>Execute</name>
      <signature>execute(method: String, args: Sequence⟨Value⟩) → Value</signature>
      <formal-definition format="latex">```
   execute(method: String, args: Sequence⟨Value⟩) → Value
   = return current.methods[method](args)</formal-definition>
    </operation>
    <operation>
      <name>Register Strategy</name>
      <signature>register(impl: Implementation) → Effect</signature>
      <formal-definition format="latex">```
   register(impl: Implementation) → Effect
   = validate(impl, interface)
     implementations[impl.id] := impl</formal-definition>
    </operation>
  </operations>
  <manifestations>
    <manifestation>
      <name>File format handlers</name>
    </manifestation>
    <manifestation>
      <name>Solver algorithms</name>
    </manifestation>
    <manifestation>
      <name>Rendering engines</name>
    </manifestation>
    <manifestation>
      <name>Compression algorithms</name>
    </manifestation>
  </manifestations>
</pattern>
