<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P68" version="1.1">
  <metadata>
    <name>Agent Team Visualization</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$V_{team} = (A_{roster}, R_{roles}, S_{status}, C_{coord}) : \text{Agents} \to \text{Visualization}$</tuple-notation>
    <components>
      <component>
        <name>A_{roster}</name>
        <type>Set⟨Agent⟩</type>
        <notation>A_{roster}</notation>
        <description>current team of active agents</description>
      </component>
      <component>
        <name>R_{roles}</name>
        <type>Agent → Role</type>
        <notation>R_{roles}</notation>
        <description>role assignment mapping for each agent</description>
      </component>
      <component>
        <name>S_{status}</name>
        <type>Agent → Status</type>
        <notation>S_{status}</notation>
        <description>current status of each agent</description>
      </component>
      <component>
        <name>C_{coord}</name>
        <type>Set⟨Coordination⟩</type>
        <notation>C_{coord}</notation>
        <description>coordination relationships between agents</description>
      </component>
    </components>
  </definition>
  <type-definitions>
    <type-def>
      <name>Agent</name>
      <definition>$\text{Agent} = (\text{id}, \text{capabilities}, \text{model}, \text{state})$</definition>
    </type-def>
    <type-def>
      <name>Role</name>
      <definition>$\text{Role} = \{\text{coordinator}, \text{worker}, \text{specialist}, \text{reviewer}, \text{observer}\}$</definition>
    </type-def>
    <type-def>
      <name>Status</name>
      <definition>$\text{Status} = \{\text{idle}, \text{thinking}, \text{executing}, \text{waiting}, \text{complete}, \text{error}\}$</definition>
    </type-def>
    <type-def>
      <name>Coordination</name>
      <definition>$\text{Coordination} = (\text{source}, \text{target}, \text{relation}, \text{data})$</definition>
    </type-def>
  </type-definitions>
  <properties>
    <property id="P.P68.1">
      <name>Complete Roster</name>
      <formal-spec format="latex">$\forall a \in \text{ActiveAgents} : a \in A_{roster}$ (all active agents visualized)</formal-spec>
    </property>
    <property id="P.P68.2">
      <name>Role Uniqueness</name>
      <formal-spec format="latex">$\exists! a \in A_{roster} : R_{roles}(a) = \text{coordinator}$ (exactly one coordinator)</formal-spec>
    </property>
    <property id="P.P68.3">
      <name>Status Real-Time</name>
      <formal-spec format="latex">$\forall a \in A_{roster} : \Delta t_{status} = t_{display}(S_{status}(a)) - t_{actual}(a) &lt; 100ms$</formal-spec>
    </property>
    <property id="P.P68.4">
      <name>Coordination Visibility</name>
      <formal-spec format="latex">$\forall c \in C_{coord} : \text{visible}(c) \land \text{direction}(c) \in \{\text{bidirectional}, \text{unidirectional}\}$</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Add Agent</name>
      <signature>addAgent: Agent × Role → A_roster</signature>
      <formal-definition format="latex">$\text{addAgent}(a, r) = A_{roster}'$ where
  $A_{roster}' = A_{roster} \cup \{a\}$
  $R_{roles}'(a) = r$
  $S_{status}'(a) = \text{idle}$</formal-definition>
    </operation>
    <operation>
      <name>Update Status</name>
      <signature>updateStatus: Agent × Status → Effect</signature>
      <formal-definition format="latex">$\text{updateStatus}(a, s) = S_{status}'$ where
  $S_{status}'(a) = s$
  $\text{notify}(\text{visualization}, a, s)$</formal-definition>
    </operation>
    <operation>
      <name>Visualize Coordination</name>
      <signature>visualize: Set⟨Coordination⟩ → Graph</signature>
      <formal-definition format="latex">$\text{visualize}(C) = G$ where
  $G.vertices = A_{roster}$
  $G.edges = \{(c.source, c.target, c.relation) \mid c \in C\}$
  $\text{layout}(G) = \text{force-directed}$</formal-definition>
    </operation>
  </operations>
  <dependencies>
    <requires>
      <pattern-ref>P14</pattern-ref>
    </requires>
    <uses>
      <pattern-ref>P69</pattern-ref>
      <pattern-ref>P71</pattern-ref>
      <pattern-ref>P93</pattern-ref>
    </uses>
  </dependencies>
  <manifestations>
    <manifestation>
      <name>CrewAI agent dashboard</name>
      <description>visualizes agent team with roles and status</description>
    </manifestation>
    <manifestation>
      <name>AutoGPT agent tree</name>
      <description>hierarchical view of agent spawning and coordination</description>
    </manifestation>
    <manifestation>
      <name>LangGraph agent graph</name>
      <description>node-edge visualization of agent workflow</description>
    </manifestation>
    <manifestation>
      <name>Mastra agent monitor</name>
      <description>real-time agent team status display</description>
    </manifestation>
  </manifestations>
</pattern>
