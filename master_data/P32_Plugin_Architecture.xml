<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P32" version="1.1">
  <metadata>
    <name>Plugin Architecture</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$P = (interface, registry, loader, lifecycle)$</tuple-notation>
    <components>
      <component>
        <name>interface</name>
        <type>Interface</type>
        <notation>interface</notation>
        <description>defines plugin contract</description>
      </component>
      <component>
        <name>registry</name>
        <type>Map⟨ID, Plugin⟩</type>
        <notation>registry</notation>
        <description>stores loaded plugins</description>
      </component>
      <component>
        <name>loader</name>
        <type>Path → Plugin</type>
        <notation>loader</notation>
        <description>loads plugins</description>
      </component>
      <component>
        <name>lifecycle</name>
        <type>Plugin → Sequence⟨Phase⟩</type>
        <notation>lifecycle</notation>
        <description>manages plugin lifecycle</description>
      </component>
    </components>
  </definition>
  <type-definitions>
    <type-def>
      <name>Plugin</name>
      <definition format="latex">(id: ID, metadata: Metadata, hooks: Map⟨HookPoint, Handler⟩)</definition>
    </type-def>
    <type-def>
      <name>Metadata</name>
      <definition format="latex">(name: String, version: Version, dependencies: Set⟨ID⟩)</definition>
    </type-def>
    <type-def>
      <name>Phase</name>
      <definition format="latex">Initialize | Activate | Deactivate | Destroy</definition>
    </type-def>
  </type-definitions>
  <properties>
    <property id="P.P32.1">
      <name>Isolation</name>
      <formal-spec format="latex">Plugins isolated from each other
Plugin failure doesn't crash system</formal-spec>
    </property>
    <property id="P.P32.2">
      <name>Well-Defined Interface</name>
      <formal-spec format="latex">All plugins implement same interface</formal-spec>
    </property>
    <property id="P.P32.3">
      <name>Dynamic Loading</name>
      <formal-spec format="latex">Plugins loaded/unloaded at runtime</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Load Plugin</name>
      <signature>load(path: Path) → Plugin</signature>
      <formal-definition format="latex">```
   load(path: Path) → Plugin
   = plugin := loader(path)
     validate(plugin)
     resolve_dependencies(plugin)
     registry[plugin.id] := plugin
     lifecycle.initialize(plugin)
     return plugin</formal-definition>
    </operation>
    <operation>
      <name>Activate Plugin</name>
      <signature>activate(plugin: Plugin) → Effect</signature>
      <formal-definition format="latex">```
   activate(plugin: Plugin) → Effect
   = lifecycle.activate(plugin)
     register_hooks(plugin.hooks)</formal-definition>
    </operation>
    <operation>
      <name>Deactivate Plugin</name>
      <signature>deactivate(plugin: Plugin) → Effect</signature>
      <formal-definition format="latex">```
   deactivate(plugin: Plugin) → Effect
   = unregister_hooks(plugin.hooks)
     lifecycle.deactivate(plugin)</formal-definition>
    </operation>
  </operations>
  <manifestations>
    <manifestation>
      <name>VS Code extensions</name>
    </manifestation>
    <manifestation>
      <name>WordPress plugins</name>
    </manifestation>
    <manifestation>
      <name>Browser extensions</name>
    </manifestation>
    <manifestation>
      <name>Plugin systems</name>
    </manifestation>
  </manifestations>
</pattern>
