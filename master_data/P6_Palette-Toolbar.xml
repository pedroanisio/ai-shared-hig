<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P6" version="1.1">
  <metadata>
    <name>Palette/Toolbar</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$P = (tools, active, mode, layout)$</tuple-notation>
    <components>
      <component>
        <name>tools</name>
        <type>Set⟨Tool⟩</type>
        <notation>tools</notation>
        <description>available tools</description>
      </component>
      <component>
        <name>active</name>
        <type>Tool | null</type>
        <notation>active</notation>
        <description>active tool</description>
      </component>
      <component>
        <name>mode</name>
        <type>\{\text{exclusive}, \text{multi}\}</type>
        <notation>mode</notation>
        <description>determines selection mode</description>
      </component>
      <component>
        <name>layout</name>
        <type>\{\text{horizontal}, \text{vertical}, \text{grid}\}</type>
        <notation>layout</notation>
        <description>visual layout</description>
      </component>
    </components>
  </definition>
  <properties>
    <property id="P.P6.1">
      <name>Modal Exclusivity</name>
      <formal-spec format="latex">mode = exclusive ⇒ |{t ∈ tools : active(t)}| ≤ 1</formal-spec>
    </property>
    <property id="P.P6.2">
      <name>Tool Application</name>
      <formal-spec format="latex">active(tool) ∧ interact(canvas) → apply(tool, interaction)</formal-spec>
    </property>
    <property id="P.P6.3">
      <name>Keyboard Shortcuts</name>
      <formal-spec format="latex">∀t ∈ tools: ∃shortcut: key(shortcut) → activate(t)</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Select Tool</name>
      <signature>select(tool: Tool) → Effect</signature>
      <formal-definition format="latex">```
   select(tool: Tool) → Effect
   = if mode = exclusive:
       active := {tool}
     else:
       active := active ∪ {tool}
     cursor := tool.cursor</formal-definition>
    </operation>
    <operation>
      <name>Apply Tool</name>
      <signature>apply(tool: Tool, event: Event) → Effect</signature>
      <formal-definition format="latex">```
   apply(tool: Tool, event: Event) → Effect
   = tool.handler(event)</formal-definition>
    </operation>
    <operation>
      <name>Deselect</name>
      <signature>deselect() → Effect</signature>
      <formal-definition format="latex">```
   deselect() → Effect
   = active := null
     cursor := default</formal-definition>
    </operation>
  </operations>
  <manifestations>
    <manifestation>
      <name>Drawing tools</name>
      <description>Figma</description>
    </manifestation>
    <manifestation>
      <name>Code actions</name>
      <description>VS Code</description>
    </manifestation>
    <manifestation>
      <name>Sketch tools</name>
      <description>CAD</description>
    </manifestation>
    <manifestation>
      <name>Formatting toolbar</name>
      <description>Word</description>
    </manifestation>
  </manifestations>
</pattern>
