<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P43" version="1.1">
  <metadata>
    <name>Application Navigation Drawer</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$D = (S_{43}, C, O, \alpha_{43}, \omega_{43}, \pi_{43})$</tuple-notation>
    <components>
      <component>
        <name>O</name>
        <type>S_{43} → \mathbb{B}</type>
        <notation>O</notation>
        <description>determines **overlay visibility**</description>
      </component>
      <component>
        <name>\alpha_{43}</name>
        <type>S_{43} \times S_{43} → Animation</type>
        <notation>\alpha_{43}</notation>
        <description>**transition animation**</description>
      </component>
      <component>
        <name>\pi_{43}</name>
        <type>C → Route</type>
        <notation>\pi_{43}</notation>
        <description>maps items to **routes**</description>
      </component>
    </components>
  </definition>
  <properties>
    <property id="P.P43.1">
      <name>State Machine</name>
      <formal-spec format="latex">Transitions:
collapsed ↔ expanded
expanded ↔ pinned
collapsed ↔ pinned</formal-spec>
    </property>
    <property id="P.P43.2">
      <name>Space Management</name>
      <formal-spec format="latex">available_width = viewport.width - (σ₄₃ ∈ {expanded, pinned} ? ω₄₃ : 0)</formal-spec>
    </property>
    <property id="P.P43.3">
      <name>Overlay Behavior</name>
      <formal-spec format="latex">O(σ₄₃) = true ⇔ σ₄₃ = expanded</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Toggle</name>
      <signature>toggle() → Effect</signature>
      <formal-definition format="latex">```
   toggle() → Effect
   = σ₄₃ := case σ₄₃ of
              collapsed → expanded
              expanded → collapsed
              pinned → pinned (no change)
     animate(α₄₃(old_state, σ₄₃))</formal-definition>
    </operation>
    <operation>
      <name>Pin</name>
      <signature>pin() → Effect</signature>
      <formal-definition format="latex">```
   pin() → Effect
   = σ₄₃ := pinned
     O := false
     persist("drawer.pinned", true)</formal-definition>
    </operation>
    <operation>
      <name>Navigate</name>
      <signature>navigate(item: Item) → Effect</signature>
      <formal-definition format="latex">```
   navigate(item: Item) → Effect
   = route := π₄₃(item)
     goto(route)
     if mobile(): σ₄₃ := collapsed</formal-definition>
    </operation>
  </operations>
  <manifestations>
    <manifestation>
      <name>Gmail sidebar</name>
    </manifestation>
    <manifestation>
      <name>VS Code activity bar</name>
    </manifestation>
    <manifestation>
      <name>Mobile hamburger menus</name>
    </manifestation>
    <manifestation>
      <name>CMS tool selector</name>
    </manifestation>
  </manifestations>
</pattern>
