<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P41" version="1.1">
  <metadata>
    <name>Inline Status Chip</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$S = (I, L, \theta_{41}, \sigma_{41}, \alpha_{41})$</tuple-notation>
    <components>
      <component>
        <name>\sigma_{41}</name>
        <type>States → Styles</type>
        <notation>\sigma_{41}</notation>
        <description>**styling function**</description>
      </component>
      <component>
        <name>\alpha_{41}</name>
        <type>Chip → Action</type>
        <notation>\alpha_{41}</notation>
        <description>optional **click action**</description>
      </component>
    </components>
  </definition>
  <properties>
    <property id="P.P41.1">
      <name>State-Style Coupling</name>
      <formal-spec format="latex">∀θ ∈ States: style(S) = σ₄₁(θ)</formal-spec>
    </property>
    <property id="P.P41.2">
      <name>Compactness</name>
      <formal-spec format="latex">width(S) ≤ 20·fontSize ∧ height(S) ≤ 2·fontSize</formal-spec>
    </property>
    <property id="P.P41.3">
      <name>Color Semantics</name>
      <formal-spec format="latex">σ₄₁(success) = green
σ₄₁(warning) = yellow
σ₄₁(error) = red
σ₄₁(info) = blue</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Update State</name>
      <signature>set_state(θ_new: State) → Effect</signature>
      <formal-definition format="latex">```
   set_state(θ_new: State) → Effect
   = θ₄₁ := θ_new
     apply_style(σ₄₁(θ_new))</formal-definition>
    </operation>
    <operation>
      <name>Render</name>
      <signature>render(S: Chip) → Component</signature>
      <formal-definition format="latex">```
   render(S: Chip) → Component
   = HStack([
       if I ≠ null then Icon(I),
       Text(L),
     ], style: σ₄₁(θ₄₁))</formal-definition>
    </operation>
  </operations>
  <manifestations>
    <manifestation>
      <name>"AI: Partial" warning chip</name>
    </manifestation>
    <manifestation>
      <name>"✓ Saved" success chip</name>
    </manifestation>
    <manifestation>
      <name>"⏱ Syncing..." info chip</name>
    </manifestation>
    <manifestation>
      <name>"❌ 2 errors" error chip</name>
    </manifestation>
  </manifestations>
</pattern>
