<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P42" version="1.1">
  <metadata>
    <name>Tooltip/Hint System</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$ts = (state, process, visualize, interact) : \text{Input} \to \text{Output}$</tuple-notation>
    <components>
      <component>
        <name>input</name>
        <type>Input</type>
        <notation>input</notation>
        <description>input to tooltip/hint system</description>
      </component>
      <component>
        <name>process</name>
        <type>Input → Output</type>
        <notation>process</notation>
        <description>processing function</description>
      </component>
      <component>
        <name>output</name>
        <type>Output</type>
        <notation>output</notation>
        <description>output from tooltip/hint system</description>
      </component>
      <component>
        <name>display</name>
        <type>Output → Visual</type>
        <notation>display</notation>
        <description>display function</description>
      </component>
    </components>
  </definition>
  <type-definitions>
    <type-def>
      <name>Input</name>
      <definition>$\text{Input} = \text{Data}$</definition>
    </type-def>
    <type-def>
      <name>Output</name>
      <definition>$\text{Output} = \text{Result}$</definition>
    </type-def>
    <type-def>
      <name>State</name>
      <definition>$\text{State} = (\text{data}, \text{timestamp})$</definition>
    </type-def>
  </type-definitions>
  <properties>
    <property id="P.P42.1">
      <name>Correctness</name>
      <formal-spec format="latex">$\forall i : \text{valid}(i) \implies \text{correct}(\text{output}(i))$</formal-spec>
    </property>
    <property id="P.P42.2">
      <name>Performance</name>
      <formal-spec format="latex">$\Delta t_{process} &lt; \text{threshold}$</formal-spec>
    </property>
    <property id="P.P42.3">
      <name>Consistency</name>
      <formal-spec format="latex">$\forall i_1, i_2 : i_1 = i_2 \implies \text{output}(i_1) = \text{output}(i_2)$</formal-spec>
    </property>
    <property id="P.P42.4">
      <name>Usability</name>
      <formal-spec format="latex">$\forall u : \text{usable}(u)$</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Process</name>
      <signature>process: Input → Output</signature>
      <formal-definition format="latex">$\text{process}(i) = o$ where $o$ is computed result</formal-definition>
    </operation>
    <operation>
      <name>Display</name>
      <signature>display: Output → Effect</signature>
      <formal-definition format="latex">$\text{display}(o)$ shows output to user</formal-definition>
    </operation>
    <operation>
      <name>Update</name>
      <signature>update: State → Effect</signature>
      <formal-definition format="latex">$\text{update}(s)$ refreshes display</formal-definition>
    </operation>
  </operations>
  <manifestations>
    <manifestation>
      <name>Tooltip/Hint System in modern applications</name>
      <description>implements tooltip/hint system pattern</description>
    </manifestation>
    <manifestation>
      <name>Web-based tooltip/hint system</name>
      <description>browser implementation of tooltip/hint system</description>
    </manifestation>
    <manifestation>
      <name>Mobile tooltip/hint system</name>
      <description>mobile app implementation</description>
    </manifestation>
  </manifestations>
</pattern>