<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="" version="1.1">
  <metadata>
    <name/>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$L = (observe, learn, update, apply)$</tuple-notation>
    <components>
      <component>
        <name>observe</name>
        <type>Environment → Observations</type>
        <notation>observe</notation>
        <description>collects data</description>
      </component>
      <component>
        <name>learn</name>
        <type>Observations → Model</type>
        <notation>learn</notation>
        <description>trains or updates model</description>
      </component>
      <component>
        <name>update</name>
        <type>Model → Policy</type>
        <notation>update</notation>
        <description>updates decision policy</description>
      </component>
      <component>
        <name>apply</name>
        <type>Policy → Actions</type>
        <notation>apply</notation>
        <description>applies learned policy</description>
      </component>
    </components>
  </definition>
  <type-definitions>
    <type-def>
      <name>Observations</name>
      <definition format="latex">Sequence⟨(State, Action, Reward)⟩</definition>
    </type-def>
    <type-def>
      <name>Model</name>
      <definition format="latex">Learned representation of environment</definition>
    </type-def>
    <type-def>
      <name>Policy</name>
      <definition format="latex">Decision-making strategy</definition>
    </type-def>
    <type-def>
      <name>Actions</name>
      <definition format="latex">Commands applied to environment</definition>
    </type-def>
  </type-definitions>
  <properties>
    <property id="P.F3.1.1">
      <name>Continuous Improvement</name>
      <formal-spec format="latex">∀t: accuracy(model_t+1) ≥ accuracy(model_t) ∨ explore(new_strategy)</formal-spec>
    </property>
    <property id="P.F3.1.2">
      <name>Feedback Integration</name>
      <formal-spec format="latex">∀observation ∈ Observations: observation influences future policy</formal-spec>
    </property>
    <property id="P.F3.1.3">
      <name>Convergence</name>
      <formal-spec format="latex">lim_{t→∞} improvement(model_t) → 0
Eventually reaches optimal or near-optimal</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Execute Loop</name>
      <signature>loop(environment: Environment) → Effect</signature>
      <formal-definition format="latex">```
   loop(environment: Environment) → Effect
   = observations := []
     model := initialize_model()
     while running:
       obs := observe(environment)
       observations := observations + [obs]
       if should_update(observations):
         model := learn(observations)
         policy := update(model)
         actions := apply(policy, environment)</formal-definition>
    </operation>
    <operation>
      <name>Learn</name>
      <signature>learn(observations: Observations) → Model</signature>
      <formal-definition format="latex">```
   learn(observations: Observations) → Model
   = features := extract_features(observations)
     model := train(features, current_model)
     validate(model, validation_set)
     return model</formal-definition>
    </operation>
    <operation>
      <name>Apply</name>
      <signature>apply(policy: Policy, env: Environment) → Actions</signature>
      <formal-definition format="latex">```
   apply(policy: Policy, env: Environment) → Actions
   = state := env.current_state()
     action := policy.select_action(state)
     env.execute(action)
     return action</formal-definition>
    </operation>
  </operations>
  <manifestations>
    <manifestation>
      <name>Reinforcement learning systems</name>
    </manifestation>
    <manifestation>
      <name>Recommender systems</name>
    </manifestation>
    <manifestation>
      <name>Adaptive user interfaces</name>
    </manifestation>
    <manifestation>
      <name>Auto-tuning systems</name>
    </manifestation>
    <manifestation>
      <name>Online learning algorithms</name>
    </manifestation>
  </manifestations>
</pattern>
