<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P26" version="1.1">
  <metadata>
    <name>Status Bar/Indicator</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$sb = (state, process, visualize, interact) : \text{Input} \to \text{Output}$</tuple-notation>
    <components>
      <component>
        <name>state</name>
        <type>State</type>
        <notation>state</notation>
        <description>current status bar/indicator state</description>
      </component>
      <component>
        <name>measure</name>
        <type>State → Metric</type>
        <notation>measure</notation>
        <description>measurement function</description>
      </component>
      <component>
        <name>visualize</name>
        <type>Metric → Visual</type>
        <notation>visualize</notation>
        <description>visualization function</description>
      </component>
      <component>
        <name>update</name>
        <type>Visual → Effect</type>
        <notation>update</notation>
        <description>display update function</description>
      </component>
    </components>
  </definition>
  <type-definitions>
    <type-def>
      <name>Input</name>
      <definition>$\text{Input} = \text{Data}$</definition>
    </type-def>
    <type-def>
      <name>Output</name>
      <definition>$\text{Output} = \text{Result}$</definition>
    </type-def>
    <type-def>
      <name>State</name>
      <definition>$\text{State} = (\text{data}, \text{timestamp})$</definition>
    </type-def>
  </type-definitions>
  <properties>
    <property id="P.P26.1">
      <name>Correctness</name>
      <formal-spec format="latex">$\forall i : \text{valid}(i) \implies \text{correct}(\text{output}(i))$</formal-spec>
    </property>
    <property id="P.P26.2">
      <name>Performance</name>
      <formal-spec format="latex">$\Delta t_{process} &lt; \text{threshold}$</formal-spec>
    </property>
    <property id="P.P26.3">
      <name>Consistency</name>
      <formal-spec format="latex">$\forall i_1, i_2 : i_1 = i_2 \implies \text{output}(i_1) = \text{output}(i_2)$</formal-spec>
    </property>
    <property id="P.P26.4">
      <name>Usability</name>
      <formal-spec format="latex">$\forall u : \text{usable}(u)$</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Process</name>
      <signature>process: Input → Output</signature>
      <formal-definition format="latex">$\text{process}(i) = o$ where $o$ is computed result</formal-definition>
    </operation>
    <operation>
      <name>Display</name>
      <signature>display: Output → Effect</signature>
      <formal-definition format="latex">$\text{display}(o)$ shows output to user</formal-definition>
    </operation>
    <operation>
      <name>Update</name>
      <signature>update: State → Effect</signature>
      <formal-definition format="latex">$\text{update}(s)$ refreshes display</formal-definition>
    </operation>
  </operations>
  <manifestations>
    <manifestation>
      <name>Status Bar/Indicator in modern applications</name>
      <description>implements status bar/indicator pattern</description>
    </manifestation>
    <manifestation>
      <name>Web-based status bar/indicator</name>
      <description>browser implementation of status bar/indicator</description>
    </manifestation>
    <manifestation>
      <name>Mobile status bar/indicator</name>
      <description>mobile app implementation</description>
    </manifestation>
  </manifestations>
</pattern>