<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P15" version="1.1">
  <metadata>
    <name>Reasoning Chain</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$R = (steps, state, deps, result)$</tuple-notation>
    <components>
      <component>
        <name>steps</name>
        <type>Sequence⟨Step⟩</type>
        <notation>steps</notation>
        <description>reasoning steps</description>
      </component>
      <component>
        <name>state</name>
        <type>Map⟨ℕ, State⟩</type>
        <notation>state</notation>
        <description>tracks state at each step</description>
      </component>
      <component>
        <name>deps</name>
        <type>Map⟨ℕ, Set⟨ℕ⟩⟩</type>
        <notation>deps</notation>
        <description>defines step dependencies</description>
      </component>
      <component>
        <name>result</name>
        <type>Result</type>
        <notation>result</notation>
        <description>final conclusion</description>
      </component>
    </components>
  </definition>
  <type-definitions>
    <type-def>
      <name>Step</name>
      <definition format="latex">(id: ℕ, operation: Operation, inputs: Set⟨ℕ⟩, output: Value)</definition>
    </type-def>
    <type-def>
      <name>Operation</name>
      <definition format="latex">Infer | Deduce | Calculate | Verify | ...</definition>
    </type-def>
    <type-def>
      <name>State</name>
      <definition format="latex">Map⟨String, Value⟩  // Variable bindings</definition>
    </type-def>
  </type-definitions>
  <properties>
    <property id="P.P15.1">
      <name>Sequential Dependency</name>
      <formal-spec format="latex">step_i depends on step_j ⇒ j &lt; i (executed before)</formal-spec>
    </property>
    <property id="P.P15.2">
      <name>State Evolution</name>
      <formal-spec format="latex">state[i+1] = apply(step[i], state[i])</formal-spec>
    </property>
    <property id="P.P15.3">
      <name>Conclusion Derivation</name>
      <formal-spec format="latex">result derived from state[|steps|]</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Add Step</name>
      <signature>add_step(operation: Operation, inputs: Set⟨ℕ⟩) → ℕ</signature>
      <formal-definition format="latex">```
   add_step(operation: Operation, inputs: Set⟨ℕ⟩) → ℕ
   = step_id := |steps|
     step := Step(step_id, operation, inputs, unknown)
     steps := steps ++ [step]
     return step_id</formal-definition>
    </operation>
    <operation>
      <name>Execute Chain</name>
      <signature>execute() → Result</signature>
      <formal-definition format="latex">```
   execute() → Result
   = state[0] := initial_state
     for i in 0..|steps|:
       input_values := {state[j][steps[j].output] : j ∈ steps[i].inputs}
       output := steps[i].operation(input_values)
       state[i+1] := state[i] ∪ {steps[i].output: output}
     return state[|steps|]</formal-definition>
    </operation>
  </operations>
  <manifestations>
    <manifestation>
      <name>AI reasoning</name>
      <description>chain-of-thought</description>
    </manifestation>
    <manifestation>
      <name>Proof derivation</name>
    </manifestation>
    <manifestation>
      <name>Build pipelines</name>
    </manifestation>
    <manifestation>
      <name>Computation traces</name>
    </manifestation>
  </manifestations>
</pattern>
