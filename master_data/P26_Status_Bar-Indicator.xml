    </components>
  </definition>
  <type-definitions>
    <type-def>
      <name>Indicator</name>
      <definition format="latex">(icon: Icon, text: String, status: Status, tooltip: String)</definition>
    </type-def>
    <type-def>
      <name>Status</name>
      <definition format="latex">Idle | Active | Success | Warning | Error</definition>
    </type-def>
    <type-def>
      <name>Message</name>
      <definition format="latex">(text: String, level: Level, timestamp: Time)</definition>
    </type-def>
    <type-def>
      <name>Level</name>
      <definition format="latex">Info | Warning | Error</definition>
    </type-def>
    <type-def>
      <name>ProgressBar</name>
      <definition format="latex">(label: String, current: ‚Ñï, total: ‚Ñï)</definition>
    </type-def>
  </type-definitions>
  <properties>
    <property id="P.P26.1">
      <name>Always Visible</name>
      <formal-spec format="latex">Status bar persistently visible</formal-spec>
    </property>
    <property id="P.P26.2">
      <name>Non-Intrusive</name>
      <formal-spec format="latex">Doesn't block interaction with main content</formal-spec>
    </property>
    <property id="P.P26.3">
      <name>Contextual Information</name>
      <formal-spec format="latex">Shows relevant info for current state/selection</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Add Indicator</name>
      <signature>add_indicator(id: String, indicator: Indicator) ‚Üí Effect</signature>
      <formal-definition format="latex">```
   add_indicator(id: String, indicator: Indicator) ‚Üí Effect
   = indicators[id] := indicator
     render(status_bar)</formal-definition>
    </operation>
    <operation>
      <name>Show Message</name>
      <signature>show_message(text: String, level: Level) ‚Üí Effect</signature>
      <formal-definition format="latex">```
   show_message(text: String, level: Level) ‚Üí Effect
   = messages := enqueue(messages, Message(text, level, now()))
     schedule(clear_message, 3000)  // Clear after 3s</formal-definition>
    </operation>
    <operation>
      <name>Update Progress</name>
      <signature>update_progress(id: String, current: ‚Ñï, total: ‚Ñï) ‚Üí Effect</signature>
      <formal-definition format="latex">```
   update_progress(id: String, current: ‚Ñï, total: ‚Ñï) ‚Üí Effect
   = progress[id].current := current
     progress[id].total := total
     render(progress_bar)
```
