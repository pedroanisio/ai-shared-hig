<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P8" version="1.1">
  <metadata>
    <name>Search-Based Navigation</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$S = (query, index, results, ranker)$</tuple-notation>
    <components>
      <component>
        <name>query</name>
        <type>String</type>
        <notation>query</notation>
        <description>search query</description>
      </component>
      <component>
        <name>index</name>
        <type>Index⟨Item⟩</type>
        <notation>index</notation>
        <description>searchable index</description>
      </component>
      <component>
        <name>results</name>
        <type>Sequence⟨Item⟩</type>
        <notation>results</notation>
        <description>ranked results</description>
      </component>
      <component>
        <name>ranker</name>
        <type>(Item, String) → ℝ</type>
        <notation>ranker</notation>
        <description>scores relevance</description>
      </component>
    </components>
  </definition>
  <properties>
    <property id="P.P8.1">
      <name>Real-Time Results</name>
      <formal-spec format="latex">type(query[0..n]) → results updated within 100ms</formal-spec>
    </property>
    <property id="P.P8.2">
      <name>Fuzzy Matching</name>
      <formal-spec format="latex">query = "fle" matches "file", "filter", "flexible"</formal-spec>
    </property>
    <property id="P.P8.3">
      <name>Ranking</name>
      <formal-spec format="latex">results sorted by ranker(item, query) descending</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Search</name>
      <signature>search(q: String) → Sequence⟨Item⟩</signature>
      <formal-definition format="latex">```
   search(q: String) → Sequence⟨Item⟩
   = candidates := fuzzy_match(index, q)
     scores := map(candidates, λitem: ranker(item, q))
     sort(zip(candidates, scores), by: score, desc)
     → take(20)</formal-definition>
    </operation>
    <operation>
      <name>Update Index</name>
      <signature>index(items: Set⟨Item⟩) → Effect</signature>
      <formal-definition format="latex">```
   index(items: Set⟨Item⟩) → Effect
   = for item in items:
       tokens := tokenize(item)
       for token in tokens:
         inverted_index[token] := inverted_index[token] ∪ {item}</formal-definition>
    </operation>
    <operation>
      <name>Rank</name>
      <signature>ranker(item: Item, query: String) → ℝ</signature>
      <formal-definition format="latex">```
   ranker(item: Item, query: String) → ℝ
   = w₁·string_similarity(item.name, query)
     + w₂·recency_score(item.timestamp)
     + w₃·frequency_score(item.access_count)</formal-definition>
    </operation>
  </operations>
  <manifestations>
    <manifestation>
      <name>File search</name>
      <description>Spotlight, Everything</description>
    </manifestation>
    <manifestation>
      <name>Theorem search</name>
      <description>Lean libraries</description>
    </manifestation>
    <manifestation>
      <name>Command palette</name>
      <description>editors</description>
    </manifestation>
    <manifestation>
      <name>Symbol search</name>
      <description>code navigation</description>
    </manifestation>
  </manifestations>
</pattern>
