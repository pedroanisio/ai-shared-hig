<?xml version="1.0" ?>
<pattern xmlns="http://universal-corpus.org/schema/v1" id="P30" version="1.1">
  <metadata>
    <name>Command Pattern</name>
    <category>pattern</category>
    <status>stable</status>
    <complexity>medium</complexity>
  </metadata>
  <definition>
    <tuple-notation format="latex">$C = (commands, executor, undo\_stack, redo\_stack)$</tuple-notation>
    <components>
      <component>
        <name>commands</name>
        <type>Sequence⟨Command⟩</type>
        <notation>commands</notation>
        <description>executed commands</description>
      </component>
      <component>
        <name>executor</name>
        <type>Command → Effect</type>
        <notation>executor</notation>
        <description>executes commands</description>
      </component>
      <component>
        <name>undo\_stack</name>
        <type>Stack⟨Command⟩</type>
        <notation>undo\_stack</notation>
        <description>for undo</description>
      </component>
      <component>
        <name>redo\_stack</name>
        <type>Stack⟨Command⟩</type>
        <notation>redo\_stack</notation>
        <description>for redo</description>
      </component>
    </components>
  </definition>
  <type-definitions>
    <type-def>
      <name>Command</name>
      <definition format="latex">(execute: () → Effect, undo: () → Effect, redo: () → Effect)</definition>
    </type-def>
  </type-definitions>
  <properties>
    <property id="P.P30.1">
      <name>Reversibility</name>
      <formal-spec format="latex">∀cmd: undo(execute(cmd)) returns to pre-execution state</formal-spec>
    </property>
    <property id="P.P30.2">
      <name>Command History</name>
      <formal-spec format="latex">All executed commands pushed to undo_stack</formal-spec>
    </property>
    <property id="P.P30.3">
      <name>Redo Invalidation</name>
      <formal-spec format="latex">New command execution → clear redo_stack</formal-spec>
    </property>
  </properties>
  <operations>
    <operation>
      <name>Execute</name>
      <signature>execute(cmd: Command) → Effect</signature>
      <formal-definition format="latex">```
   execute(cmd: Command) → Effect
   = cmd.execute()
     undo_stack := push(undo_stack, cmd)
     redo_stack := empty()  // Clear redo on new action</formal-definition>
    </operation>
    <operation>
      <name>Undo</name>
      <signature>undo() → Effect</signature>
      <formal-definition format="latex">```
   undo() → Effect
   = if ¬empty(undo_stack):
       cmd := pop(undo_stack)
       cmd.undo()
       redo_stack := push(redo_stack, cmd)</formal-definition>
    </operation>
    <operation>
      <name>Redo</name>
      <signature>redo() → Effect</signature>
      <formal-definition format="latex">```
   redo() → Effect
   = if ¬empty(redo_stack):
       cmd := pop(redo_stack)
       cmd.redo()
       undo_stack := push(undo_stack, cmd)</formal-definition>
    </operation>
  </operations>
  <manifestations>
    <manifestation>
      <name>Undo/redo system</name>
    </manifestation>
    <manifestation>
      <name>Macro recording</name>
    </manifestation>
    <manifestation>
      <name>Transaction log</name>
    </manifestation>
    <manifestation>
      <name>Command history</name>
    </manifestation>
  </manifestations>
</pattern>
